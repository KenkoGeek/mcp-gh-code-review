# GitHub Authentication
GITHUB_TOKEN=ghp_FAKE_TOKEN_REPLACE_WITH_REAL
# OR use GitHub App credentials:
# GITHUB_APP_ID=123456
# GITHUB_PRIVATE_KEY=path/to/private-key.pem
# GITHUB_INSTALLATION_ID=789012

# Bot Actor Patterns (comma-separated, extends defaults)
BOT_ACTORS=custom-bot,another-bot

# Policy Configuration
POLICY_PATH=config/policy.example.yaml

# Database Path
DB_PATH=.mcp/threads.db

# Server Settings
DRY_RUN=false
LOG_LEVEL=INFO

# Webhook Secret (for FastAPI webhook endpoint)
WEBHOOK_SECRET=your_webhook_secret_here
